<?xml version = "1.0"?>
<robot name = "scara" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Used for fixing robot to 'base_link' -->
  <link name="world"/>

  <!-- Base Link -->
  <link name = "base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://scara_description/meshes/scaradxl_base.dae" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="grey"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://scara_description/meshes/scaradxl_base.dae" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
  </link>


  <link name = "link1">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://scara_description/meshes/scaradxl_link1.dae" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="grey"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://scara_description/meshes/scaradxl_link1.dae" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
  </link>

  <link name = "link2">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://scara_description/meshes/scaradxl_link2.dae" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="grey"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://scara_description/meshes/scaradxl_link2.dae" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
  </link>

  <link name = "link3">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://scara_description/meshes/scaradxl_link3.dae" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="grey"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://scara_description/meshes/scaradxl_link3.dae" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
  </link>

  <link name = "pen">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://scara_description/meshes/scaradxl_pen.dae" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="grey"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://scara_description/meshes/scaradxl_pen.dae" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
  </link>v

  <link name="tool0"/>


  <joint name="base2world" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
  </joint>

  <joint name="joint1" type="prismatic">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0.0 0.0 0.14" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit velocity="4.8" effort="1" lower="-0.1" upper="0.1" />
  </joint>

  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0.0743 0.0 0.0" rpy="0 0 0.0"/>
    <axis xyz="0 0 1"/>
    <limit velocity="4.8" effort="1" lower="-0.010" upper="0.019" />
  </joint>
  <joint name="joint3" type="revolute">
    <parent link="link2"/>
    <child link="link3"/>
    <origin xyz="0.1 0.0 0.0" rpy="0 0 0.0"/>
    <axis xyz="0 0 1"/>
    <limit velocity="4.8" effort="1" lower="-0.010" upper="0.019" />
  </joint>

  <joint name="pen2link3" type="fixed">
      <origin rpy="0 0 0" xyz="0.1 0 0"/>
      <parent link="link3"/>
      <child link="pen"/>
      <axis xyz="0 0 0"/>
  </joint>

  <joint name="tool02pen" type="fixed">
      <origin rpy="0 0 0" xyz="0 0 0.1"/>
      <parent link="pen"/>
      <child link="tool0"/>
      <axis xyz="0 0 0"/>
  </joint>

</robot>